<?php

namespace Pipeline\APIBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

use Pipline\APIBundle\Constants;

/**
 * Task
 *
 * @ORM\Table()
 * @ORM\Entity(repositoryClass="Pipeline\APIBundle\Entity\TaskRepository")
 */
class Task
{
    /**
     * @var integer
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var string
     *
     * @ORM\Column(name="name", type="string", length=150)
     */
    private $name;

    /**
     * @var string
     *
     * @ORM\Column(name="status", type="integer")
     */
    private $status;

    /**
     * @var integer
     *
     * @ORM\Column(name="owner", type="integer")
     */
    private $owner;

    /**
     * @var string
     *
     * @ORM\Column(name="description", type="text")
     */
    private $description;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="created_at", type="datetime")
     */
    private $createdAt;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="updated_at", type="datetime")
     */
    private $updatedAt;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="scheduled_at", type="datetime")
     */
    private $scheduledAt;
    
    /**
     * @var \DateTime
     *
     * @ORM\Column(name="due_at", type="datetime")
     */
    private $dueAt;

    /**
     * @var integer
     *
     * @ORM\Column(name="priority", type="integer")
     */
    private $priority;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="completed_at", type="datetime")
     */
    private $completedAt;

    /**
     * @ORM\OneToMany(targetEntity="Task", mappedBy="parentTask")
     */
    private $subtasks;

	/**
     * @ORM\ManyToOne(targetEntity="Task", inversedBy="subtasks")
     */
    private $parentTask;


}
